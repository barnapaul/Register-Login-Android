<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.barna.shop">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.MainStudent" />
        <activity android:name=".ui.RegisterActivity" />
        <activity android:name=".ui.MainTeacher" />
        <activity android:name=".controller.BaseActivity" />
        <activity android:name=".ui.StudentsListSubmitGradeActivity" />
        <activity
            android:name=".ui.ShowStudentClassesActivity"
            android:label="@string/title_activity_show_student_classes"
            android:theme="@style/AppTheme" />
        <activity android:name=".ui.ShowStudentGradesActivity" />
        <activity android:name=".ui.ShowStudentsActivity"></activity>
    </application>

</manifest>