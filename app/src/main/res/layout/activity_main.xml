<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.barna.shop.ui.MainActivity">


    <TextView
        android:id="@+id/userType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size"
        android:textColor="@color/colorText"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="@dimen/marginLeft_register"
        android:layout_marginRight="@dimen/marginRight_register"
        android:layout_marginEnd="@dimen/marginRight_register"
        android:layout_marginStart="@dimen/marginLeft_register"
        />

    <TextView
        android:id="@+id/firstNameDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size"
        android:textColor="@color/colorText"
        android:layout_marginTop="@dimen/marginTop_register"
        android:layout_marginLeft="@dimen/marginLeft_register"
        android:layout_marginRight="@dimen/marginRight_register"
        android:layout_marginEnd="@dimen/marginRight_register"
        android:layout_marginStart="@dimen/marginLeft_register"
        />
    <TextView
        android:id="@+id/lastNameDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size"
        android:textColor="@color/colorText"
        android:layout_marginTop="@dimen/marginTop_register"
        android:layout_marginLeft="@dimen/marginLeft_register"
        android:layout_marginRight="@dimen/marginRight_register"
        android:layout_marginEnd="@dimen/marginRight_register"
        android:layout_marginStart="@dimen/marginLeft_register"
        />
    <TextView
        android:id="@+id/emailDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size"
        android:textColor="@color/colorText"
        android:layout_marginTop="@dimen/marginTop_register"
        android:layout_marginLeft="@dimen/marginLeft_register"
        android:layout_marginRight="@dimen/marginRight_register"
        android:layout_marginEnd="@dimen/marginRight_register"
        android:layout_marginStart="@dimen/marginLeft_register"
        />
    <TextView
        android:id="@+id/phoneDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size"
        android:textColor="@color/colorText"
        android:layout_marginTop="@dimen/marginTop_register"
        android:layout_marginLeft="@dimen/marginLeft_register"
        android:layout_marginRight="@dimen/marginRight_register"
        android:layout_marginEnd="@dimen/marginRight_register"
        android:layout_marginStart="@dimen/marginLeft_register"
        />

    <TextView
        android:id="@+id/passwordDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size"
        android:textColor="@color/colorText"
        android:layout_marginTop="@dimen/marginTop_register"
        android:layout_marginLeft="@dimen/marginLeft_register"
        android:layout_marginRight="@dimen/marginRight_register"
        android:layout_marginEnd="@dimen/marginRight_register"
        android:layout_marginStart="@dimen/marginLeft_register"
         />
    <TextView
        android:id="@+id/facultyDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size"
        android:textColor="@color/colorText"
        android:layout_marginTop="@dimen/marginTop_register"
        android:layout_marginLeft="@dimen/marginLeft_register"
        android:layout_marginRight="@dimen/marginRight_register"
        android:layout_marginEnd="@dimen/marginRight_register"
        android:layout_marginStart="@dimen/marginLeft_register"
        />
    <TextView
        android:id="@+id/yearDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size"
        android:textColor="@color/colorText"
        android:layout_marginTop="@dimen/marginTop_register"
        android:layout_marginLeft="@dimen/marginLeft_register"
        android:layout_marginRight="@dimen/marginRight_register"
        android:layout_marginEnd="@dimen/marginRight_register"
        android:layout_marginStart="@dimen/marginLeft_register"
        />


    <Button
        android:id="@+id/logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/marginLeft_register"
        android:layout_marginRight="@dimen/marginRight_register"
        android:layout_marginEnd="@dimen/marginRight_register"
        android:layout_marginStart="@dimen/marginLeft_register"
        android:layout_marginTop="50dp"
        android:height="20dp"
        android:background="#b30000"
        android:textSize="@dimen/text_size_button"
        android:text="@string/log_out"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/showUsers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marginTop_register"
        android:layout_marginLeft="@dimen/marginLeft_register"
        android:layout_marginRight="@dimen/marginRight_register"
        android:layout_marginEnd="@dimen/marginRight_register"
        android:layout_marginStart="@dimen/marginLeft_register"
        android:height="20dp"
        android:background="#7c7b7b"
        android:textSize="@dimen/text_size_button"
        android:text="@string/show_all_users"
        android:textColor="#FFFFFF"  />

    <Button
        android:id="@+id/get"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marginTop_register"
        android:layout_marginLeft="@dimen/marginLeft_register"
        android:layout_marginRight="@dimen/marginRight_register"
        android:layout_marginEnd="@dimen/marginRight_register"
        android:layout_marginStart="@dimen/marginLeft_register"
        android:height="20dp"
        android:background="#f123"
        android:textSize="@dimen/text_size_button"
        android:text="@string/helloWorld"
        android:textColor="#FFFFFF"  />



</LinearLayout>
